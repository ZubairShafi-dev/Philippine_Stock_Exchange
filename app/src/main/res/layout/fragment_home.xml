<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <in.srain.cube.views.ptr.PtrClassicFrameLayout
        android:id="@+id/ultra_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:ptr_ratio_of_header_height_to_refresh="1.2"
        ptr:disableWhenHorizontalMove="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:nestedScrollingEnabled="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top Bar with Profile Title and Icons -->
                    <RelativeLayout
                        android:id="@+id/topBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/menuIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_menu" />

                        <TextView
                            android:id="@+id/profileTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/announcementIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="40dp"
                            android:src="@drawable/announcement_icon" />

                        <ImageView
                            android:id="@+id/notificationIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_notification" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:padding="16dp">

                        <!-- Wallet Card -->
                        <include
                            android:id="@+id/walletCard"
                            layout="@layout/item_home_wallet_card" />

                    </LinearLayout>



                    <!-- ────── Announcement Slider (ViewPager2 + TabLayout) ────── -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/viewpagerContainer"
                        app:cardElevation="0dp"
                        android:backgroundTint="@android:color/transparent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- 1) The ViewPager2 for image swiping -->
                            <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/announcementSlider"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <!-- 2) A TabLayout for indicator dots -->
                            <com.google.android.material.tabs.TabLayout
                                android:id="@+id/sliderDots"
                                android:layout_width="match_parent"
                                android:layout_height="8dp"
                                android:layout_gravity="bottom"
                                android:layout_marginBottom="8dp"
                                android:background="@android:color/transparent"
                                app:tabBackground="@drawable/tab_dot_selector"
                                app:tabIndicatorHeight="0dp"
                                app:tabIndicatorColor="@android:color/transparent"
                                app:tabRippleColor="@android:color/transparent"
                                app:tabGravity="center"
                                app:tabMode="fixed"
                                app:tabMinWidth="8dp"
                                app:tabPaddingStart="2dp"
                                app:tabPaddingEnd="0dp"/>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- … rest of your fragment_home.xml … -->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <include
                            android:id="@+id/depositAmount"
                            layout="@layout/item_action_card_deposit" />

                        <include
                            android:id="@+id/withdrawAmount"
                            layout="@layout/item_action_card_withdraw" />

                        <include
                            android:id="@+id/bought_plans"
                            layout="@layout/item_action_card_plans" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="26dp"
                        android:layout_marginTop="16dp"
                        android:text="Investment Wallet"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Investment Widgets -->
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="false"
                        android:padding="8dp"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView

                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/glassy_action_card_bg"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="20dp"
                                app:strokeWidth="0dp">

                                <RelativeLayout
                                    android:id="@+id/itemStockPlan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/glassy_action_card_bg">

                                    <TextView
                                        android:id="@+id/planStockTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="18dp"
                                        android:text="Stocks Plan"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/planStockPercentage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planStockTitle"
                                        android:layout_marginStart="18dp"
                                        android:text="180.06%"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_per_yearStock"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planStockTitle"
                                        android:layout_marginStart="4dp"
                                        android:layout_toEndOf="@+id/planStockPercentage"
                                        android:text="per year"
                                        android:textColor="#C4FFFFFF"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/tv_total_investmentStock"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planStockPercentage"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="12dp"
                                        android:text="Total Investment"
                                        android:textColor="@color/black"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/stocksAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_total_investmentStock"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="3dp"
                                        android:text="$000"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="24dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginBottom="12dp"
                                        android:src="@drawable/investment_widget_footer" />

                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView

                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/glassy_action_card_bg"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="20dp"
                                app:strokeWidth="0dp">

                                <RelativeLayout
                                    android:id="@+id/itemMedicinePlan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/glassy_action_card_bg">

                                    <!-- Plan Name -->
                                    <TextView
                                        android:id="@+id/planMedicineTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="18dp"
                                        android:text="Medicine Plan"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/planMedicinePercentage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planMedicineTitle"
                                        android:layout_marginStart="18dp"
                                        android:text="200.08%"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_per_yearMedicine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planMedicineTitle"
                                        android:layout_marginStart="4dp"
                                        android:layout_toEndOf="@+id/planMedicinePercentage"
                                        android:text="per year"
                                        android:textColor="#C4FFFFFF"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/tv_total_investmentMedicine"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planMedicinePercentage"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="12dp"
                                        android:text="Total Investment"
                                        android:textColor="@color/black"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/medicineAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_total_investmentMedicine"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="3dp"
                                        android:text="$000"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="24dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginBottom="12dp"
                                        android:src="@drawable/investment_widget_footer" />

                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="160dp"
                                android:layout_height="160dp"
                                android:layout_marginEnd="12dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/glassy_action_card_bg"
                                app:cardBackgroundColor="@android:color/transparent"
                                app:cardCornerRadius="20dp"
                                app:strokeWidth="0dp">

                                <RelativeLayout
                                    android:id="@+id/itemForexPlan"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/glassy_action_card_bg">

                                    <!-- Plan Name -->
                                    <TextView
                                        android:id="@+id/planForexTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginTop="18dp"
                                        android:text="Forex Plan"
                                        android:textColor="@android:color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/planForexPercentage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planForexTitle"
                                        android:layout_marginStart="18dp"
                                        android:text="219.07%"
                                        android:textColor="@color/white"
                                        android:textSize="10sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_per_yearForex"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planForexTitle"
                                        android:layout_marginStart="4dp"
                                        android:layout_toEndOf="@+id/planForexPercentage"
                                        android:text="per year"
                                        android:textColor="#C4FFFFFF"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/tv_total_investment"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/planForexPercentage"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="12dp"
                                        android:text="Total Investment"
                                        android:textColor="@color/black"
                                        android:textSize="8sp" />

                                    <TextView
                                        android:id="@+id/forexAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_total_investment"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginTop="3dp"
                                        android:text="$000"
                                        android:textColor="@color/white"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="56dp"
                                        android:layout_height="24dp"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="18dp"
                                        android:layout_marginBottom="12dp"
                                        android:src="@drawable/investment_widget_footer" />
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>
                    </HorizontalScrollView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="Earnings"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <androidx.gridlayout.widget.GridLayout
                        android:id="@+id/earningsGrid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        app:alignmentMode="alignMargins"
                        app:columnCount="2"
                        app:orientation="horizontal"
                        app:rowOrderPreserved="false">

                        <include
                            layout="@layout/item_earning_today"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_columnSpan="1"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <include
                            layout="@layout/item_earning_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_columnSpan="1"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <include
                            layout="@layout/item_earning_referal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_columnSpan="1"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />

                        <include
                            layout="@layout/item_earning_team"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:layout_columnSpan="1"
                            app:layout_columnWeight="1"
                            app:layout_rowWeight="1" />
                    </androidx.gridlayout.widget.GridLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="Top Stocks"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/see_all_stocks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="See All"
                            android:textColor="@color/light_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/topStocksRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="Top Medicines"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/see_all_medicines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="See All"
                            android:textColor="@color/light_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/topMedicinesRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="Forex Trading Plans"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/see_all_forex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginHorizontal="26dp"
                            android:layout_marginTop="16dp"
                            android:text="See All"
                            android:textColor="@color/light_blue"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/forexRecycler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:orientation="vertical" />

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginHorizontal="10dp"
                            android:backgroundTint="@android:color/transparent"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/glassy_action_card_bg"
                                android:elevation="4dp"
                                android:orientation="vertical" android:padding="16dp">

                                <!-- Top row: icon, label, referral code, copy button -->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dp">

                                    <!-- Icon box -->
                                    <ImageView
                                        android:id="@+id/iconRef"
                                        android:layout_width="38dp"
                                        android:layout_height="38dp"
                                        android:layout_alignParentStart="true"
                                        android:layout_centerVertical="true"
                                        android:background="@drawable/bg_referral_icon"
                                        android:padding="12dp"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_user_add" />

                                    <!-- Referral Code Label and Number -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="12dp"
                                        android:layout_toEndOf="@id/iconRef"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:text="Refferel Code"
                                            android:textColor="#EDEDED"
                                            android:textSize="11sp" />

                                        <TextView
                                            android:id="@+id/textReferralCode"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="bottom"
                                            android:text="U1214"
                                            android:textColor="@android:color/white"
                                            android:textSize="14sp"
                                            android:textStyle="bold" />
                                    </LinearLayout>

                                    <!-- Copy Code -->
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Copy Code"
                                            android:textColor="#DDDDDD"
                                            android:textSize="13sp" />

                                        <ImageView
                                            android:layout_width="16dp"
                                            android:layout_height="16dp"
                                            android:layout_marginStart="4dp"
                                            android:src="@drawable/ic_copy" />
                                    </LinearLayout>
                                </RelativeLayout>

                                <!-- Input with right-end icon -->
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_referral"
                                    android:gravity="center_vertical"
                                    android:paddingEnd="12dp">

                                    <EditText
                                        android:id="@+id/inputReferral"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@android:color/transparent"
                                        android:drawableEnd="@drawable/ic_link"
                                        android:editable="false"
                                        android:hint="link"
                                        android:padding="6dp"
                                        android:paddingStart="14dp"
                                        android:text="998877665544"
                                        android:textColor="#000000"
                                        android:textSize="13sp" />
                                </RelativeLayout>
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

