<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:aandroid="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_bg"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_menu" />

            <TextView
                android:id="@+id/profileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Investment Plans"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notification" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tvStocksWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:layout_marginTop="22dp"
            android:padding="16dp"
            android:text="Stocks Wallet"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cardStocks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStocksWallet"
            android:layout_marginHorizontal="4dp"
            android:paddingHorizontal="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/itemCardStockInvestment"
                card_view:cardCornerRadius="16dp"
                card_view:strokeColor="@android:color/transparent"
                card_view:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_bg"
                    android:padding="18dp">

                    <!-- Wallet Type -->
                    <TextView
                        android:id="@+id/tvWalletType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stocks"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Wi-Fi & Toggle Icons -->
                    <ImageView
                        android:id="@+id/iconToggle"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/mastercard" />

                    <ImageView
                        android:id="@+id/iconSignal"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignTop="@id/iconToggle"
                        android:layout_marginEnd="18dp"
                        android:layout_toStartOf="@id/iconToggle"
                        android:src="@drawable/wifi_icon_card" />

                    <!-- Provider Name -->
                    <TextView
                        android:id="@+id/tvProvider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvWalletType"
                        android:layout_marginTop="22dp"
                        android:text="Amazon Platinium"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:visibility="invisible"
                        android:textStyle="bold" />

                    <!-- Masked Card Number -->
                    <TextView
                        android:id="@+id/tvCardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProvider"
                        android:layout_marginTop="12dp"
                        android:text="4756   ••••   ••••   9018"
                        android:textColor="@android:color/white"
                        android:visibility="invisible"
                        android:textSize="18sp" />

                    <!-- Amount -->
                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvCardNumber"
                        android:layout_marginTop="12dp"
                        android:text="$3.469.52"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Invest Button -->
                    <Button
                        android:id="@+id/btnInvestStocks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="@android:color/white"
                        android:text="Invest"
                        android:textColor="@android:color/black"
                        android:translationY="-12dp"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvMedicineWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardStocks"
            android:padding="16dp"
            android:text="Medicine Wallet"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cardMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMedicineWallet"
            android:layout_marginHorizontal="4dp"
            android:paddingHorizontal="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/item_card_medicine_investment"
                aandroid:layout_width="match_parent"
                card_view:cardCornerRadius="16dp"
                card_view:strokeColor="@android:color/transparent"
                card_view:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_bg"
                    android:padding="18dp">

                    <!-- Wallet Type -->
                    <TextView
                        android:id="@+id/tvWalletType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicine"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Wi-Fi & Toggle Icons -->
                    <ImageView
                        android:id="@+id/iconToggle2"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/mastercard" />

                    <ImageView
                        android:id="@+id/iconSignal2"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignTop="@id/iconToggle2"
                        android:layout_marginEnd="18dp"
                        android:layout_toStartOf="@id/iconToggle2"
                        android:src="@drawable/wifi_icon_card" />

                    <!-- Provider Name -->
                    <TextView
                        android:id="@+id/tvProvider2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvWalletType2"
                        android:layout_marginTop="22dp"
                        android:text="Amazon Platinium"
                        android:textColor="@android:color/white"
                        android:visibility="invisible"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Masked Card Number -->
                    <TextView
                        android:id="@+id/tvCardNumber2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProvider2"
                        android:layout_marginTop="12dp"
                        android:text="4756   ••••   ••••   9018"
                        android:visibility="invisible"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <!-- Amount -->
                    <TextView
                        android:id="@+id/tvAmount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvCardNumber2"
                        android:layout_marginTop="12dp"
                        android:text="$3.469.52"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Invest Button -->
                    <Button
                        android:id="@+id/btnInvestMedicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="@android:color/white"
                        android:text="Invest"
                        android:translationY="-12dp"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tvForexWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardMedicine"
            android:padding="16dp"
            android:text="Forex Wallet"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/cardForex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvForexWallet"
            android:layout_marginHorizontal="4dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                aandroid:layout_width="match_parent"
                card_view:cardCornerRadius="16dp"
                android:id="@+id/item_card_forex_investment"
                card_view:strokeColor="@android:color/transparent"
                card_view:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_bg"
                    android:padding="18dp">

                    <!-- Wallet Type -->
                    <TextView
                        android:id="@+id/tvWalletType3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forex"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Wi-Fi & Toggle Icons -->
                    <ImageView
                        android:id="@+id/iconToggle3"
                        android:layout_width="40dp"
                        android:layout_height="24dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/mastercard" />

                    <ImageView
                        android:id="@+id/iconSignal3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignTop="@id/iconToggle3"
                        android:layout_marginEnd="18dp"
                        android:layout_toStartOf="@id/iconToggle3"
                        android:src="@drawable/wifi_icon_card" />

                    <!-- Provider Name -->
                    <TextView
                        android:id="@+id/tvProvider3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvWalletType"
                        android:layout_marginTop="22dp"
                        android:text="Amazon Platinium"
                        android:visibility="invisible"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Masked Card Number -->
                    <TextView
                        android:id="@+id/tvCardNumber3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvProvider3"
                        android:layout_marginTop="12dp"
                        android:text="4756   ••••   ••••   9018"
                        android:visibility="invisible"
                        android:textColor="@android:color/white"
                        android:textSize="18sp" />

                    <!-- Amount -->
                    <TextView
                        android:id="@+id/tvAmount3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvCardNumber3"
                        android:layout_marginTop="12dp"
                        android:text="$3.469.52"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Invest Button -->
                    <Button
                        android:id="@+id/btnInvestForex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="12dp"
                        android:backgroundTint="@android:color/white"
                        android:text="Invest"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:translationY="-12dp" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="100dp" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>