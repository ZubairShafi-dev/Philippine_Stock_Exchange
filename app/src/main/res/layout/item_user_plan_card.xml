<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp"
    android:elevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:padding="18dp">

        <!-- Title + status -->
        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/tvStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginEnd="12dp"
            tools:text="Index Zone Builder" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chip_bg"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="ACTIVE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvPlanName" />

        <!-- KPI row -->
        <TextView
            android:id="@+id/lblPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Principal"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlanName" />

        <TextView
            android:id="@+id/tvPrincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/lblPrincipal"
            app:layout_constraintTop_toBottomOf="@id/lblPrincipal"
            tools:text="$25" />

        <TextView
            android:id="@+id/lblRoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily ROI"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            app:layout_constraintBaseline_toBaselineOf="@id/lblPrincipal"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/lblRoi"
            app:layout_constraintTop_toBottomOf="@id/lblRoi"
            tools:text="0.60% | $0.15" />

        <!-- Progress -->
        <TextView
            android:id="@+id/tvProgressPct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPrincipal"
            tools:text="0% completed" />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="6dp"
            app:trackCornerRadius="6dp"
            app:trackThickness="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProgressPct" />

        <!-- Meta (simple, airy) -->
        <TextView
            android:id="@+id/tvBought"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.85"
            app:layout_constraintEnd_toStartOf="@id/tvLastRoi"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progress"
            tools:text="Bought — Aug 10, 2025" />

        <TextView
            android:id="@+id/tvLastRoi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.85"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tvBought"
            app:layout_constraintTop_toTopOf="@id/tvBought"
            tools:text="Last ROI — Aug 11, 2025" />

        <!-- Bottom row -->
        <TextView
            android:id="@+id/tvTotalPayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.9"
            app:layout_constraintEnd_toStartOf="@id/tvDirectBadge"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvBought"
            tools:text="Total Payout: $50" />

        <TextView
            android:id="@+id/tvDirectBadge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/tvTotalPayout"
            app:layout_constraintTop_toTopOf="@id/tvTotalPayout"
            tools:text="Referral Bonus: 7%" />

        <!-- bottom padding -->
        <Space
            android:layout_width="0dp"
            android:layout_height="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTotalPayout"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
