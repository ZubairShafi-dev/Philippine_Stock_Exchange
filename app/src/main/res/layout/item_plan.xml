<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="28dp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp"
    app:cardElevation="12dp"
    android:elevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:padding="20dp">

        <!-- Row 1: Icon + Coin Name -->
        <ImageView
            android:id="@+id/coinIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_ethereum"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/coinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginStart="8dp"
            android:text="Ethereum"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/coinIcon"
            app:layout_constraintTop_toTopOf="@id/coinIcon"
            app:layout_constraintBottom_toBottomOf="@id/coinIcon" />

        <!-- Row 2: Min/Max left, Percentage+Price right -->
        <LinearLayout
            android:id="@+id/priceContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/coinIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Min & Max (left side) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/minAmmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min: 0.0"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/maxAmmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Max: 0.0"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Percentage + Price (right side) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/coinPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0.0%"
                    android:textColor="#8DFDAE49"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/coinPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="$0.0"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Row 3: Invest Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/investButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            app:cornerRadius="28dp"
            android:backgroundTint="#F2FFFFFF"
            android:alpha="0.92"
            android:text="Invest"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:elevation="0dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/priceContainer"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
