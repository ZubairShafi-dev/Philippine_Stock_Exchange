<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="28dp"
    app:strokeColor="@android:color/transparent"
    app:strokeWidth="0dp"
    app:cardElevation="12dp"
    android:elevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:padding="20dp">

        <!-- Row 1: Icon + Coin Name -->
        <FrameLayout
            android:id="@+id/iconBackground"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/coinIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_ethereum"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/iconBackground"
            app:layout_constraintTop_toTopOf="@id/iconBackground"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Ethereum"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/minAmmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Min: 0.0"
                android:textColor="#B3FFFFFF"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/maxAmmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Max: 0.0"
                android:textColor="#B3FFFFFF"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- Row 2: Price below textContainer + button center -->
        <LinearLayout
            android:id="@+id/priceContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/textContainer"
            app:layout_constraintStart_toStartOf="@id/textContainer"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/coinPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0.0%"
                android:textColor="#8DFDAE49"
                android:textSize="13sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/coinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.0"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/investButton"
            android:layout_width="130dp"
            android:layout_height="48dp"
            app:cornerRadius="32dp"
            android:backgroundTint="#F2FFFFFF"
            android:alpha="0.92"
            android:text="Invest"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/priceContainer"
            app:layout_constraintBottom_toBottomOf="@id/priceContainer"
            android:layout_marginEnd="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
