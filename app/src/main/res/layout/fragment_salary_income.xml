<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootSalary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/menuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:id="@+id/profileTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Salary Income"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <!-- ───────── Status: Window Open ───────── -->
                <LinearLayout
                    android:id="@+id/stateWindowOpen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/glassy_action_card_bg"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Qualification Window (30 days)"
                            android:textColor="@color/white_90"
                            android:textSize="18sp"
                            android:textStyle="bold" />


                    </LinearLayout>



                    <!-- Dates -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelText"
                            android:text="Start" />

                        <TextView
                            android:id="@+id/tvWindowStart"
                            style="@style/ValueText"
                            android:text="—" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelText"
                            android:text="Ends" />

                        <TextView
                            android:id="@+id/tvWindowEnd"
                            style="@style/ValueText"
                            android:text="—" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white_12" />

                    <!-- Preview -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Live Preview (locks at day 30)"
                        android:textColor="@color/white_90"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/LabelText"
                            android:text="Active Direct Business (current)" />

                        <TextView
                            android:id="@+id/tvPreviewAdb"
                            style="@style/ValueText"
                            android:text="$0" />
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvPreviewTier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="Tier not locked yet"
                            android:textColor="@color/white_70"
                            android:layout_marginTop="2dp" />

                        <TextView
                            android:id="@+id/tvCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_pill_primary"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="4dp"
                            android:text="--:--:--"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.google.android.material.progressindicator.LinearProgressIndicator
                            android:id="@+id/progressDays"
                            style="@style/Widget.Material3.LinearProgressIndicator"
                            android:layout_width="0dp"
                            android:layout_height="8dp"
                            android:layout_weight="1"
                            app:indicatorColor="@color/teal_accent"
                            app:trackColor="@color/white_20"
                            app:trackThickness="8dp" />

                        <TextView
                            android:id="@+id/tvDaysPct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="0%"
                            android:textColor="@color/white_80"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>


                <!-- ───────── Status: Active (Locked) ───────── -->
                <LinearLayout
                    android:id="@+id/stateActive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/glassy_action_card_bg"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Salary Program — Active"
                            android:textColor="@color/white_90"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvTier"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_pill_secondary"
                            android:paddingStart="10dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="4dp"
                            android:text="Tier ?"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Row"
                        android:layout_marginTop="8dp">

                        <TextView
                            style="@style/LabelText"
                            android:text="Next Payout" />

                        <TextView
                            android:id="@+id/tvNextPayout"
                            style="@style/ValueText"
                            android:text="—" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/Row"
                        android:layout_marginTop="4dp">

                        <TextView
                            style="@style/LabelText"
                            android:text="Last Payout" />

                        <TextView
                            android:id="@+id/tvLastPayout"
                            style="@style/ValueText"
                            android:text="—" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Row"
                        android:layout_marginTop="4dp">

                        <TextView
                            style="@style/LabelText"
                            android:text="Monthly Salary" />

                        <TextView
                            android:id="@+id/tvSalary"
                            style="@style/ValueTextBold"
                            android:text="$0" />
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Row"
                        android:layout_marginTop="8dp">

                        <TextView
                            style="@style/LabelText"
                            android:text="Locked Active Direct Business" />

                        <TextView
                            android:id="@+id/tvLockedAdb"
                            style="@style/ValueText"
                            android:text="$0" />
                    </LinearLayout>

                </LinearLayout>

                <!-- ───────── Status: Ended ───────── -->
                <LinearLayout
                    android:id="@+id/stateEnded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/glassy_action_card_bg"
                    android:orientation="vertical"
                    android:padding="14dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Program — Ended"
                        android:textColor="@color/white_90"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvEndedReason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Reason: —"
                        android:textColor="@color/white_70" />
                </LinearLayout>

                <!-- ───────── Tiers Table (static) ───────── -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/glassy_action_card_bg"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Tiers "
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginTop="4dp">

                        <!-- Start Text -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Active Direct Business"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <!-- End Text -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Monthly Salary"
                            android:textColor="@color/white"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            style="@style/TierRow"
                            android:layout_weight="1"
                            android:text="$1,500" />

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$50 " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$2,000" />

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$100" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$4,000" />

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$250" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="$7,000" />

                        <TextView
                            style="@style/TierRow"
                            android:text="$500 " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="$15,000" />

                        <TextView
                            style="@style/TierRow"
                            android:text="$1,200 " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            style="@style/TierRow"
                            android:layout_weight="1"
                            android:text="$30,000" />

                        <TextView
                            style="@style/TierRow"
                            android:text="$2,500 " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            style="@style/TierRow"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="$50,000" />

                        <TextView
                            style="@style/TierRow"
                            android:text="$5,000 " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:layout_width="0dp"
                            style="@style/TierRow"
                            android:layout_weight="1"
                            android:text="$100,000" />

                        <TextView
                            style="@style/TierRow"
                            android:text="$12,000" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="48dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
