<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Shadow Simulation -->
    <item android:right="0dp" android:left="0dp" android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#0005FF00" /> <!-- Optional green glow -->
        </shape>
    </item>

    <!-- Diagonal blurred white gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="#1AFFFFFF"
                android:endColor="#66FFFFFF"
                android:useLevel="false" />
        </shape>
    </item>

</layer-list>
