<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected state: a solid white circle, now 4×4 dp -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <size
                android:width="8dp"
                android:height="8dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Unselected state: a semi‐transparent white circle, also 4×4 dp -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="8dp"
                android:height="8dp" />
            <solid android:color="#80FFFFFF" /> <!-- 50% white -->
        </shape>
    </item>

</selector>
