<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.PSE" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="colorPrimary">@color/white</item>

        <!-- Apply our BottomSheet overlay -->
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.PSE.BottomSheet</item>
    </style>

    <style name="Theme.PSE" parent="Base.Theme.PSE"/>

    <!-- BottomSheet overlay: shape + scoped colors -->
    <style name="ThemeOverlay.PSE.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <!-- Rounded shape for the sheet -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.PSE.Rounded24</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.PSE.Rounded24</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.PSE.Rounded24</item>

        <!-- Scoped colors so the Buy button isn't white-on-light -->
        <item name="colorPrimary">@color/brand_primary_sheet</item>
        <item name="colorOnPrimary">@color/brand_on_primary_sheet</item>
    </style>

    <!-- 24dp rounded shape (use Material3 parent; if unresolved, switch to MaterialComponents) -->
    <style name="ShapeAppearance.PSE.Rounded24" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Your existing styles -->
    <style name="Widget.AITrustLedger.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="FabShape.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="NoActiveIndicator" parent="@style/Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@android:color/transparent</item>
        <item name="android:height">0dp</item>
        <item name="android:width">0dp</item>
    </style>

    <style name="RoundedImageSmall" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LabelText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white_70</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ValueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ValueTextBold" parent="ValueText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TierRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>